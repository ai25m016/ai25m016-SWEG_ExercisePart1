from __future__ import annotations

import os
import time

from .main import main as _main


if __name__ == "__main__":
    # Optional: in Docker/Compose kurz warten, bis RabbitMQ wirklich ready ist
    # (wenn du das bereits in main.py hast, kannst du das hier weglassen)
    if os.getenv("STARTUP_DELAY_SECONDS"):
        time.sleep(float(os.getenv("STARTUP_DELAY_SECONDS")))

    raise SystemExit(_main())
